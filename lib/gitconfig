[user]
	name = Hozaka
[core]
	editor = vim
	autocrlf = input
	excludesfile = /Users/hozaka/.gitignore_global
[merge]
	tool = vimdiff

[alias]
	st = status
	co = checkout
	ci = commit
	last = log -1 HEAD
[color]
	ui = true
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[push]
	default = simple
[tag]
	sort = version:refname
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
